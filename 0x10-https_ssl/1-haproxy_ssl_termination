global
   log /dev/log local0
   log /dev/log local1 notice
   chroot /var/lib/haproxy
   stats socket /run/haproxy/admin.sock mode 660 level admin
   stats timeout 30s
   user haproxy
   group haproxy
   daemon
   tune.ssl.default-dh-param 2048


   ca-base /etc/ssl/certs
   crt-base /etc/ssl/private


frontend http-in
   bind *:80
   bind *:443 ssl crt /etc/letsencrypt/live/www.ombokjustus.tech-0001/fullchain.pem
   mode http
   default_backend servers
   timeout client 30s
   timeout server 30s
   timeout connect 5s

backend servers
   mode http
   balance roundrobin
   option httpclose
   option forwardfor
   timeout client 30s
   timeout server 30s
   timeout connect 5s
   server 261084-web-01 18.209.223.53:80 check
   server 261084-web-02 54.160.76.99:80 check
